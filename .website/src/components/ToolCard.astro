---
import type { Tool } from '../data/tools';

interface Props {
  tool: Tool;
  compact?: boolean;
}

const { tool, compact = false } = Astro.props;

const formatStars = (stars?: number) => {
  if (!stars) return null;
  if (stars >= 1000) {
    return `${(stars / 1000).toFixed(1)}k`;
  }
  return stars.toString();
};

---

<div class="showcase-card group">
  <!-- Dark image area with overlay -->
  <div class="showcase-card-image">
    <!-- Default overlay -->
    <div class="card-overlay-default">
      <img src="/default-overlay.png" alt="" class="overlay-image" />
    </div>

    <!-- Hover overlay -->
    <div class="card-overlay-hover">
      <img src="/overlay-hover.png" alt="" class="overlay-image" />
    </div>

    <!-- Tool logo in center -->
    <div class="showcase-card-content">
      {tool.logo ? (
        <img src={tool.logo} alt={tool.name} class="tool-logo" />
      ) : (
        <span class="tool-display-name">{tool.name}</span>
      )}
    </div>

    <!-- Hover buttons -->
    <div class="hover-buttons">
      <a
        href={tool.homepage}
        target="_blank"
        rel="noopener noreferrer"
        class="hover-btn hover-btn-primary"
      >
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
        Website
      </a>
      {tool.docs && (
        <a
          href={tool.docs}
          target="_blank"
          rel="noopener noreferrer"
          class="hover-btn hover-btn-secondary"
        >
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          Docs
        </a>
      )}
    </div>
  </div>

  <!-- Info section -->
  <div class="showcase-card-info">
    <div>
      <h3 class="showcase-card-title">{tool.name}</h3>
      <p class="showcase-card-description">{tool.description}</p>
    </div>

    <!-- Stats row -->
    {(tool.stars || tool.language) && (
      <div class="tool-stats">
        {tool.github && tool.stars && (
          <div class="stat">
            <svg class="stat-icon" fill="currentColor" viewBox="0 0 20 20" width="20" height="20">
              <path d="M10 1.25a.75.75 0 0 1 .673.418l1.882 3.815 4.21.612a.75.75 0 0 1 .416 1.279l-3.046 2.97.719 4.192a.751.751 0 0 1-1.088.791L10 13.347l-3.766 1.98a.75.75 0 0 1-1.088-.79l.72-4.194L2.818 8.374a.75.75 0 0 1 .416-1.28l4.21-.611L9.327 2.668A.75.75 0 0 1 10 1.25Z"/>
            </svg>
            <span>{formatStars(tool.stars)}</span>
          </div>
        )}
        {tool.language && (
          <div class="stat">
            <span class="language-dot"></span>
            <span>{tool.language}</span>
          </div>
        )}
      </div>
    )}
  </div>
</div>

<style>
  .tool-display-name {
    font-size: 1.25rem;
    font-weight: 600;
    color: white;
    letter-spacing: -0.02em;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .tool-logo {
    max-width: 180px;
    max-height: 100px;
    object-fit: contain;
  }

  @media (max-width: 768px) {
    .tool-logo {
      max-width: 140px;
      max-height: 80px;
    }
  }

  .tool-stats {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }

  .stat {
    display: flex;
    align-items: center;
    gap: 4px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 14px;
    line-height: 21px;
    letter-spacing: -0.2px;
    color: var(--color-text-primary);
  }

  .stat-icon {
    width: 20px;
    height: 20px;
    color: #ff8c00;
  }

  .language-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #ff8c00;
  }

  /* Overlay styles */
  .card-overlay-default,
  .card-overlay-hover {
    position: absolute;
    inset: 0;
    z-index: 1;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .overlay-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-overlay-default {
    opacity: 1;
  }

  .card-overlay-hover {
    opacity: 0;
  }

  .showcase-card:hover .card-overlay-default {
    opacity: 0;
  }

  .showcase-card:hover .card-overlay-hover {
    opacity: 1;
  }

  /* Hover buttons */
  .hover-buttons {
    position: absolute;
    bottom: 16px;
    left: 50%;
    transform: translateX(-50%) translateY(20px);
    display: flex;
    gap: 8px;
    z-index: 10;
    opacity: 0;
    transition: all 0.3s ease;
    pointer-events: none;
  }

  .showcase-card:hover .hover-buttons {
    opacity: 1;
    transform: translateX(-50%) translateY(0);
    pointer-events: auto;
  }

  .hover-btn {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 10px 16px;
    border-radius: 8px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 13px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .hover-btn svg {
    width: 16px;
    height: 16px;
  }

  .hover-btn-primary {
    background: var(--color-text-primary);
    color: var(--color-bg-primary);
    border: 1px solid var(--color-text-primary);
  }

  .hover-btn-primary:hover {
    opacity: 0.9;
  }

  .hover-btn-secondary {
    background: rgba(255, 255, 255, 0.95);
    color: var(--color-text-primary);
    border: 1px solid var(--color-border);
  }

  html[data-theme="dark"] .hover-btn-secondary {
    background: rgba(30, 30, 30, 0.95);
    border-color: var(--color-border);
  }

  .hover-btn-secondary:hover {
    border-color: var(--color-text-primary);
  }
</style>
