---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ToolCard from '../components/ToolCard.astro';
import { getToolsByCategory, categories, tools, type Category } from '../data/tools';

const categoryList = Object.entries(categories) as [Category, { label: string; description: string; icon: string }][];
---

<Layout title="The best BYOC tools — curated by developers">
  <Header />

  <main class="flex-1">
    <!-- Hero Section -->
    <section class="relative overflow-hidden bg-gradient-to-b from-[var(--color-slate-50)] to-[var(--color-surface)] py-8 md:py-12">
      <div class="absolute inset-0 bg-grid opacity-50"></div>
      <div class="container relative">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="hero-title text-4xl md:text-5xl lg:text-6xl font-bold text-[var(--color-text-primary)] mb-4 text-balance">
            <span class="text-[var(--color-accent-500)]">&gt;</span>bring your own<span class="blinking-cursor">_</span>
          </h1>

          <p class="text-lg md:text-xl text-[var(--color-text-secondary)] mb-6 max-w-2xl mx-auto">
            Discover self-hostable and bring-your-own-cloud infrastructure tools.
          </p>

          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <a href="https://github.com/nuonco/buildyourown" target="_blank" rel="noopener noreferrer" class="btn btn-primary">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              Contribute on GitHub
            </a>
            <a href="/about" class="btn btn-secondary">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              More on BYOC
            </a>
          </div>

          <div class="mt-6 flex items-center justify-center gap-8 text-sm text-[var(--color-text-muted)]">
            <div class="flex items-center gap-2">
              <span class="w-2 h-2 rounded-full bg-[var(--color-success)]"></span>
              {tools.length} tools indexed
            </div>
            <div class="flex items-center gap-2">
              <span class="w-2 h-2 rounded-full bg-[var(--color-accent-500)]"></span>
              {categoryList.length} categories
            </div>
            <div class="flex items-center gap-2">
              <span class="w-2 h-2 rounded-full bg-[var(--color-secondary-500)]"></span>
              Open source
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- What is BYOC Section -->
    <section class="py-6 md:py-8 bg-[var(--color-surface)]">
      <div class="container">
        <div class="max-w-3xl mx-auto">
          <div class="terminal">
            <div class="flex items-center gap-2 mb-4 pb-3 border-b border-[var(--color-slate-700)]">
              <span class="w-3 h-3 rounded-full bg-red-500"></span>
              <span class="w-3 h-3 rounded-full bg-yellow-500"></span>
              <span class="w-3 h-3 rounded-full bg-green-500"></span>
              <span class="ml-4 text-[var(--color-slate-400)]">what-is-byoc.md</span>
            </div>
            <div class="space-y-2">
              <p class="text-[var(--color-accent-400)]"># What is BYOC?</p>
              <p class="text-[var(--color-slate-300)]">
                <span class="text-[var(--color-slate-500)]">></span> BYOC (Bring Your Own Cloud) is a deployment model where
              </p>
              <p class="text-[var(--color-slate-300)]">
                <span class="text-[var(--color-slate-500)]">></span> software runs in <span class="text-green-400">your</span> cloud account instead of a vendor's.
              </p>
              <p class="text-[var(--color-slate-300)] mt-4">
                <span class="text-[var(--color-slate-500)]">></span> Benefits:
              </p>
              <p class="text-[var(--color-slate-300)]">
                <span class="text-green-400">✓</span> Data stays in your environment
              </p>
              <p class="text-[var(--color-slate-300)]">
                <span class="text-green-400">✓</span> Compliance requirements met
              </p>
              <p class="text-[var(--color-slate-300)]">
                <span class="text-green-400">✓</span> No vendor lock-in
              </p>
              <p class="text-[var(--color-slate-300)]">
                <span class="text-green-400">✓</span> Cost transparency
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- All Tools Section with Collapsible Categories -->
    <section class="py-12 md:py-16 bg-[var(--color-slate-50)]">
      <div class="container">
        <div class="text-center mb-8">
          <h2 class="text-2xl md:text-3xl font-bold text-[var(--color-text-primary)] mb-2">
            All Tools
          </h2>
          <p class="text-[var(--color-text-secondary)]">
            Browse {tools.length} BYOC tools across {categoryList.length} categories
          </p>
        </div>

        <!-- Search -->
        <div class="max-w-xl mx-auto mb-8">
          <div class="tools-search-container">
            <svg class="tools-search-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <input
              type="text"
              id="tools-search"
              placeholder="Search tools by name, description, or tags..."
              class="tools-search-input"
            />
          </div>
        </div>

        <!-- Collapsible Category Accordions -->
        <div class="max-w-4xl mx-auto" id="categories-container">
          {categoryList.map(([categoryKey, categoryInfo], index) => {
            const categoryTools = getToolsByCategory(categoryKey);
            return (
              <details
                class="category-accordion"
                data-category={categoryKey}
                open={index === 0}
              >
                <summary>
                  <div class="category-accordion-icon" set:html={categoryInfo.icon} />
                  <span class="category-accordion-title">{categoryInfo.label}</span>
                  <span class="category-accordion-count" data-count={categoryTools.length}>
                    {categoryTools.length} tools
                  </span>
                  <svg class="category-accordion-chevron" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </summary>
                <div class="category-accordion-content">
                  <p class="text-sm text-[var(--color-text-secondary)] mb-4">{categoryInfo.description}</p>
                  <div class="category-accordion-grid">
                    {categoryTools.map((tool) => (
                      <div
                        class="tool-item"
                        data-name={tool.name.toLowerCase()}
                        data-description={tool.description.toLowerCase()}
                        data-tags={tool.tags.join(' ').toLowerCase()}
                      >
                        <ToolCard tool={tool} compact />
                      </div>
                    ))}
                  </div>
                </div>
              </details>
            );
          })}
        </div>

        <!-- No Results -->
        <div id="no-results" class="hidden text-center py-12">
          <svg class="w-16 h-16 mx-auto mb-4 text-[var(--color-slate-300)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3 class="text-lg font-semibold text-[var(--color-text-primary)] mb-2">No tools found</h3>
          <p class="text-[var(--color-text-secondary)]">Try a different search term</p>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 md:py-20 bg-[var(--color-slate-900)]">
      <div class="container">
        <div class="max-w-2xl mx-auto text-center">
          <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">
            Know a great BYOC tool?
          </h2>
          <p class="text-[var(--color-slate-300)] mb-8">
            This list is open source. Fork the repo and open a PR to add tools, fix info, or improve the site.
          </p>
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <a
              href="https://github.com/nuonco/buildyourown"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-primary"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              Open a PR
            </a>
          </div>
          <p class="mt-6 text-sm text-[var(--color-slate-500)]">
            <code class="bg-[var(--color-slate-800)] px-2 py-1 rounded text-[var(--color-slate-400)]">git clone https://github.com/nuonco/buildyourown.git</code>
          </p>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<script>
  document.addEventListener('astro:page-load', initSearch);
  document.addEventListener('DOMContentLoaded', initSearch);

  function initSearch() {
    const searchInput = document.getElementById('tools-search') as HTMLInputElement;
    const categoriesContainer = document.getElementById('categories-container');
    const noResults = document.getElementById('no-results');

    if (!searchInput || !categoriesContainer) return;

    searchInput.addEventListener('input', () => {
      const searchTerm = searchInput.value.toLowerCase().trim();

      if (!searchTerm) {
        // Reset all to visible
        document.querySelectorAll('.tool-item').forEach((item) => {
          (item as HTMLElement).classList.remove('tool-item-hidden');
        });
        document.querySelectorAll('.category-accordion').forEach((accordion) => {
          (accordion as HTMLElement).classList.remove('category-accordion-hidden');
          // Update count to original
          const count = accordion.querySelectorAll('.tool-item').length;
          const countEl = accordion.querySelector('.category-accordion-count');
          if (countEl) {
            countEl.textContent = `${count} tools`;
          }
        });
        noResults?.classList.add('hidden');
        return;
      }

      let totalVisible = 0;

      document.querySelectorAll('.category-accordion').forEach((accordion) => {
        const toolItems = accordion.querySelectorAll('.tool-item');
        let categoryVisible = 0;

        toolItems.forEach((item) => {
          const name = item.getAttribute('data-name') || '';
          const description = item.getAttribute('data-description') || '';
          const tags = item.getAttribute('data-tags') || '';

          const matches = name.includes(searchTerm) ||
                         description.includes(searchTerm) ||
                         tags.includes(searchTerm);

          if (matches) {
            (item as HTMLElement).classList.remove('tool-item-hidden');
            categoryVisible++;
            totalVisible++;
          } else {
            (item as HTMLElement).classList.add('tool-item-hidden');
          }
        });

        // Hide category if no visible tools
        if (categoryVisible === 0) {
          (accordion as HTMLElement).classList.add('category-accordion-hidden');
        } else {
          (accordion as HTMLElement).classList.remove('category-accordion-hidden');
          // Open the accordion if it has matches
          (accordion as HTMLDetailsElement).open = true;
        }

        // Update count
        const countEl = accordion.querySelector('.category-accordion-count');
        if (countEl) {
          countEl.textContent = `${categoryVisible} tools`;
        }
      });

      // Show/hide no results message
      if (totalVisible === 0) {
        noResults?.classList.remove('hidden');
      } else {
        noResults?.classList.add('hidden');
      }
    });
  }
</script>
