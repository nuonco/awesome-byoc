---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ToolCard from '../../components/ToolCard.astro';
import { tools, categories, getToolsByCategory } from '../../data/tools';

export function getStaticPaths() {
  return tools.map((tool) => ({
    params: { id: tool.id },
    props: { tool },
  }));
}

const { tool } = Astro.props;
const categoryInfo = categories[tool.category];
const relatedTools = getToolsByCategory(tool.category)
  .filter((t) => t.id !== tool.id)
  .slice(0, 3);

const formatStars = (stars?: number) => {
  if (!stars) return null;
  if (stars >= 1000) {
    return `${(stars / 1000).toFixed(1)}k`;
  }
  return stars.toString();
};

const licenseLabels = {
  'open-source': 'Open Source',
  'commercial': 'Commercial',
  'hybrid': 'Hybrid (Open Core)',
};
---

<Layout title={tool.name} description={tool.description}>
  <Header />

  <main class="flex-1 bg-[var(--color-slate-50)]">
    <div class="container py-8 md:py-12">
      <!-- Breadcrumb -->
      <nav class="mb-6 text-sm">
        <ol class="flex items-center gap-2 text-[var(--color-text-muted)]">
          <li><a href="/" class="hover:text-[var(--color-accent-600)]">Home</a></li>
          <li>/</li>
          <li><a href="/tools" class="hover:text-[var(--color-accent-600)]">Tools</a></li>
          <li>/</li>
          <li><a href={`/categories/${tool.category}`} class="hover:text-[var(--color-accent-600)]">{categoryInfo.label}</a></li>
          <li>/</li>
          <li class="text-[var(--color-text-primary)]">{tool.name}</li>
        </ol>
      </nav>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-2">
          <div class="bg-[var(--color-surface)] rounded-xl border border-[var(--color-slate-200)] p-8">
            <!-- Header -->
            <div class="flex items-start justify-between gap-4 mb-6">
              <div>
                <h1 class="text-3xl font-bold text-[var(--color-text-primary)] mb-2">
                  {tool.name}
                </h1>
                <p class="text-lg text-[var(--color-text-secondary)]">
                  {tool.description}
                </p>
              </div>
            </div>

            <!-- Badges -->
            <div class="flex flex-wrap gap-2 mb-6">
              <span class:list={[
                "badge",
                tool.license === 'open-source' ? 'badge-opensource' : tool.license === 'commercial' ? 'badge-commercial' : 'badge-byoc'
              ]}>
                {licenseLabels[tool.license]}
              </span>
              <span class="badge badge-byoc">BYOC</span>
              {tool.language && (
                <span class="badge bg-[var(--color-slate-100)] text-[var(--color-text-secondary)]">
                  {tool.language}
                </span>
              )}
            </div>

            <!-- Long Description -->
            {tool.longDescription && (
              <div class="mb-8">
                <h2 class="text-lg font-semibold text-[var(--color-text-primary)] mb-3">About</h2>
                <p class="text-[var(--color-text-secondary)] leading-relaxed">
                  {tool.longDescription}
                </p>
              </div>
            )}

            <!-- Tags -->
            <div class="mb-8">
              <h2 class="text-lg font-semibold text-[var(--color-text-primary)] mb-3">Tags</h2>
              <div class="flex flex-wrap gap-2">
                {tool.tags.map((tag) => (
                  <span class="text-sm px-3 py-1 rounded-lg bg-[var(--color-slate-100)] text-[var(--color-text-secondary)]">
                    {tag}
                  </span>
                ))}
              </div>
            </div>

            <!-- Cloud Support -->
            <div class="mb-8">
              <h2 class="text-lg font-semibold text-[var(--color-text-primary)] mb-3">Cloud Support</h2>
              <div class="flex flex-wrap gap-2">
                {tool.cloudSupport.map((cloud) => (
                  <span class="text-sm px-3 py-1 rounded-lg bg-[var(--color-accent-50)] text-[var(--color-accent-700)] font-medium">
                    {cloud === 'any' ? 'Any Cloud' : cloud.toUpperCase()}
                  </span>
                ))}
              </div>
            </div>

            <!-- Links -->
            <div class="flex flex-wrap gap-3">
              <a
                href={tool.homepage}
                target="_blank"
                rel="noopener noreferrer"
                class="btn btn-primary"
              >
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
                Visit Website
              </a>
              {tool.github && (
                <a
                  href={tool.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="btn btn-secondary"
                >
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  View on GitHub
                </a>
              )}
              {tool.docs && (
                <a
                  href={tool.docs}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="btn btn-secondary"
                >
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                  </svg>
                  Documentation
                </a>
              )}
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <!-- Quick Info Card -->
          <div class="bg-[var(--color-surface)] rounded-xl border border-[var(--color-slate-200)] p-6 mb-6">
            <h2 class="text-lg font-semibold text-[var(--color-text-primary)] mb-4">Quick Info</h2>
            <dl class="space-y-4">
              <div>
                <dt class="text-sm text-[var(--color-text-muted)]">Category</dt>
                <dd>
                  <a href={`/categories/${tool.category}`} class="text-[var(--color-accent-600)] hover:underline">
                    {categoryInfo.label}
                  </a>
                </dd>
              </div>
              <div>
                <dt class="text-sm text-[var(--color-text-muted)]">License</dt>
                <dd class="text-[var(--color-text-primary)]">{licenseLabels[tool.license]}</dd>
              </div>
              {tool.language && (
                <div>
                  <dt class="text-sm text-[var(--color-text-muted)]">Language</dt>
                  <dd class="text-[var(--color-text-primary)]">{tool.language}</dd>
                </div>
              )}
              {tool.stars && (
                <div>
                  <dt class="text-sm text-[var(--color-text-muted)]">GitHub Stars</dt>
                  <dd class="flex items-center gap-1 text-[var(--color-text-primary)]">
                    <svg class="w-4 h-4 text-yellow-500" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 .25a.75.75 0 0 1 .673.418l3.058 6.197 6.839.994a.75.75 0 0 1 .415 1.279l-4.948 4.823 1.168 6.811a.751.751 0 0 1-1.088.791L12 18.347l-6.117 3.216a.75.75 0 0 1-1.088-.79l1.168-6.812-4.948-4.823a.75.75 0 0 1 .416-1.28l6.838-.993L11.327.668A.75.75 0 0 1 12 .25Z"/>
                    </svg>
                    {formatStars(tool.stars)}
                  </dd>
                </div>
              )}
            </dl>
          </div>

          <!-- Related Tools -->
          {relatedTools.length > 0 && (
            <div class="bg-[var(--color-surface)] rounded-xl border border-[var(--color-slate-200)] p-6">
              <h2 class="text-lg font-semibold text-[var(--color-text-primary)] mb-4">Related Tools</h2>
              <div class="space-y-4">
                {relatedTools.map((relatedTool) => (
                  <a
                    href={`/tools/${relatedTool.id}`}
                    class="block p-3 rounded-lg border border-[var(--color-slate-200)] hover:border-[var(--color-accent-200)] hover:bg-[var(--color-slate-50)] transition-colors"
                  >
                    <h3 class="font-medium text-[var(--color-text-primary)] mb-1">{relatedTool.name}</h3>
                    <p class="text-sm text-[var(--color-text-secondary)] line-clamp-2">{relatedTool.description}</p>
                  </a>
                ))}
              </div>
              <a
                href={`/categories/${tool.category}`}
                class="block mt-4 text-center text-sm text-[var(--color-accent-600)] hover:underline"
              >
                View all {categoryInfo.label} tools â†’
              </a>
            </div>
          )}
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
