---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { featuredVendors, featuredCategories, getFeaturedVendorById } from '../../data/featuredVendors';

export function getStaticPaths() {
  return featuredVendors.map((vendor) => ({
    params: { id: vendor.id },
  }));
}

const { id } = Astro.params;
const vendor = getFeaturedVendorById(id);

if (!vendor) {
  return Astro.redirect('/featured');
}

const category = featuredCategories[vendor.category];
---

<Layout title={`${vendor.name} BYOC Architecture | Featured`}>
  <Header />

  <main class="flex-1 bg-[var(--color-slate-50)]">
    <div class="container py-8 md:py-12">
      <div class="max-w-4xl mx-auto">
        <!-- Breadcrumb -->
        <nav class="mb-8">
          <ol class="flex items-center gap-2 text-sm text-[var(--color-text-muted)]">
            <li>
              <a href="/featured" class="hover:text-[var(--color-accent-600)] transition-colors">
                Featured
              </a>
            </li>
            <li>
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </li>
            <li class="text-[var(--color-text-primary)] font-medium">{vendor.name}</li>
          </ol>
        </nav>

        <!-- Header -->
        <div class="bg-[var(--color-surface)] rounded-xl border border-[var(--color-slate-200)] p-8 mb-8">
          <div class="flex items-start gap-6 mb-6">
            <div class="w-16 h-16 rounded-xl bg-white border border-[var(--color-slate-200)] flex items-center justify-center p-3 shrink-0">
              <img
                src={vendor.logo}
                alt={vendor.name}
                class="max-w-full max-h-full object-contain"
                onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
              />
              <span class="text-lg font-bold text-[var(--color-slate-600)] hidden items-center justify-center">
                {vendor.name.substring(0, 2).toUpperCase()}
              </span>
            </div>
            <div class="flex-1">
              <div class="flex items-center gap-3 mb-2">
                <h1 class="text-3xl font-bold text-[var(--color-text-primary)]">{vendor.name}</h1>
                <span class="px-2 py-1 text-xs font-medium rounded-full bg-[var(--color-accent-100)] text-[var(--color-accent-700)]">
                  {category?.label || vendor.category}
                </span>
              </div>
              <p class="text-lg text-[var(--color-text-secondary)]">{vendor.tagline}</p>
            </div>
          </div>

          <!-- Links -->
          <div class="flex flex-wrap gap-3">
            <a
              href={vendor.websiteUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-secondary text-sm"
            >
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
              </svg>
              Website
            </a>
            <a
              href={vendor.blogPostUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-secondary text-sm"
            >
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              Official Docs
            </a>
          </div>
        </div>

        <!-- ASCII Table Summary -->
        <div class="bg-[var(--color-surface)] rounded-xl border border-[var(--color-slate-200)] p-6 mb-8">
          <h2 class="text-lg font-semibold text-[var(--color-text-primary)] mb-4">At a Glance</h2>
          <div class="bg-[var(--color-slate-900)] rounded-lg p-4 font-mono text-sm overflow-x-auto">
            <pre class="text-[var(--color-slate-300)]"><code class="language-markdown">┌────────────────────────┬────────────────────────────────────────────────────────┐
│ Company                │ <span class="text-[var(--color-accent-400)]">{vendor.name.padEnd(54)}</span> │
├────────────────────────┼────────────────────────────────────────────────────────┤
│ BYOC Offer             │ {vendor.byocOfferSummary.substring(0, 54).padEnd(54)} │
├────────────────────────┼────────────────────────────────────────────────────────┤
│ What Makes This Great  │ {vendor.whatMakesThisGreat.substring(0, 54).padEnd(54)} │
└────────────────────────┴────────────────────────────────────────────────────────┘</code></pre>
          </div>
        </div>

        <!-- Highlights -->
        <div class="bg-[var(--color-surface)] rounded-xl border border-[var(--color-slate-200)] p-6 mb-8">
          <h2 class="text-lg font-semibold text-[var(--color-text-primary)] mb-4">Key Highlights</h2>
          <ul class="space-y-3">
            {vendor.highlights.map((highlight) => (
              <li class="flex items-start gap-3 text-[var(--color-text-secondary)]">
                <svg class="w-5 h-5 text-[var(--color-success)] shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>{highlight}</span>
              </li>
            ))}
          </ul>
        </div>

        <!-- Write-up -->
        <div class="bg-[var(--color-surface)] rounded-xl border border-[var(--color-slate-200)] p-8 mb-8">
          <h2 class="text-xl font-bold text-[var(--color-text-primary)] mb-6">Architecture Deep Dive</h2>
          <div class="prose prose-slate max-w-none">
            {vendor.writeUp.split('\n\n').map((paragraph) => (
              <p class="text-[var(--color-text-secondary)] mb-4 leading-relaxed">{paragraph}</p>
            ))}
          </div>
        </div>

        <!-- Nuon Commentary -->
        <div class="bg-gradient-to-r from-[var(--color-accent-50)] to-[var(--color-accent-100)] rounded-xl border border-[var(--color-accent-200)] p-8 mb-8">
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 rounded-lg bg-[var(--color-accent-500)] flex items-center justify-center shrink-0">
              <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-[var(--color-accent-800)] mb-2">Nuon's Take</h3>
              <p class="text-[var(--color-accent-700)] leading-relaxed">{vendor.nuonCommentary}</p>
            </div>
          </div>
        </div>

        <!-- Navigation -->
        <div class="flex items-center justify-between">
          <a href="/featured" class="btn btn-secondary">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Featured
          </a>
          <a href="/about" class="btn btn-secondary">
            Learn More About BYOC
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>
